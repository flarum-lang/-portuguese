{
	"name": "flarum-lang/portuguese",
	"type": "flarum-extension",
	"description": "Portuguese language pack for Flarum.",
	"homepage": "https://github.com/flarum-lang/portuguese",
	"keywords": [
		"locale",
		"flarum",
		"pt-locale"
	],
	"license": "MIT",
	"support": {
		"issues": "https://github.com/flarum-lang/portuguese/issues",
		"source": "https://github.com/flarum-lang/portuguese"
	},
	"require": {
		"flarum/core": "^1.0"
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"extra": {
		"flarum-extension": {
			"title": "Portuguese",
			"category": "language",
			"icon": {
				"image": "icon.svg",
				"backgroundSize": "cover",
				"backgroundPosition": "center"
			}
		},
		"flarum-locale": {
			"code": "pt",
			"title": "Portuguese"
		},
		"extiverse": {
			"discuss": ""
		}
	}
}
